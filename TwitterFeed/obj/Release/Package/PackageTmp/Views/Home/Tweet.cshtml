@model TwitterFeed.Models.Tweet
<div class="container">
    <div class="row">
        <div class="form-group row">
            <img src="@Model.User.ProfilePicture" />
            <div>
                <span style="font-size:3vh;">@Html.DisplayFor(model => model.User.UserName)</span>
                <br />
                <text>@@</text>@Html.DisplayFor(model => model.User.UserScreenName)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            @Html.DisplayFor(model => model.Content)
            @foreach (var url in Model.Entities.Urls)
            {
                <a href="@url.ShortUrl">@url.ShortUrl</a>
            }
            <br />
            @Html.DisplayFor(model => model.TweetPosted)
        </div>
    </div>
    <div class="row">
        This tweet has been retweeted: @Html.DisplayFor(model => model.RetweetCount) times.
    </div>
</div>
